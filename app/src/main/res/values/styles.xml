<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tableRow">
        <item name="android:background">@color/row_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="header">
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">2</item>
        <item name="android:background">@color/header_background</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="day">
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:bufferType">spannable</item>
        <item name="android:background">@color/room_row_background</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    <style name="room">
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:bufferType">spannable</item>
        <item name="android:background">@color/room_row_background</item>
        <item name="android:layout_margin">1dp</item>
    </style>
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:backgroundTint">@color/button_background</item>
    </style>
    <style name="wbDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>